{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "php-di/slim-bridge": "^3.4",
        "php": "^8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-pdo": "*",
        "illuminate/support": "^10.47",
        "illuminate/database": "^10.47",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "files": [
            "./app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
